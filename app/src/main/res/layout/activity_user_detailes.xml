<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/bg"
    >

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/avatar_detail"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_id_label"
        android:textColor="#FFFFFF"
        android:text="Id:"
        android:textSize="17sp"
        android:layout_below="@+id/avatar_detail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_id"
        android:textColor="#FFFFFF"
        android:text=""
        android:textSize="20sp"
        android:layout_toRightOf="@+id/user_id_label"
        android:layout_below="@+id/avatar_detail"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_username_label"
        android:textColor="#ffffff"
        android:text="Username:"
        android:textSize="17sp"
        android:layout_below="@+id/user_id"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_username"
        android:textColor="#FFFFFF"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@+id/user_id"
        android:layout_toRightOf="@+id/user_username_label"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_password_label"
        android:textColor="#ffffff"
        android:text="Password:"
        android:textSize="17sp"
        android:layout_below="@+id/user_username"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_password"
        android:textColor="#FFFFFF"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@+id/user_username"
        android:layout_toRightOf="@id/user_password_label"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_firstname_label"
        android:textColor="#ffffff"
        android:text="First Name:"
        android:textSize="17sp"
        android:layout_below="@+id/user_password"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_firstname"
        android:textColor="#FFFFFF"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/user_password"
        android:layout_toRightOf="@id/user_firstname_label"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="17dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_lastname_label"
        android:textColor="#ffffff"
        android:text="Last Name:"
        android:textSize="17sp"
        android:layout_below="@id/user_firstname"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_lastname"
        android:textColor="#FFFFFF"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/user_firstname"
        android:layout_toRightOf="@+id/user_username_label"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="17dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_admin_label"
        android:textColor="#ffffff"
        android:text="Admin:"
        android:textSize="17sp"
        android:layout_below="@+id/user_lastname"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_admin"
        android:textColor="#FFFFFF"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@+id/user_lastname"
        android:layout_toRightOf="@+id/user_admin_label"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="17dp"/>

</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navigarion_drawer_header">

    </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
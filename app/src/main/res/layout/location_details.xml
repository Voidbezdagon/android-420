<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@drawable/bg"
        >

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_id_label"
            android:textColor="#AAAAAA"
            android:text="Id:"
            android:textSize="17sp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_id"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="20sp"
            android:layout_toRightOf="@+id/location_id_label"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_name_label"
            android:textColor="#AAAAAA"
            android:text="Name:"
            android:textSize="17sp"
            android:layout_below="@+id/location_id"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_name"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="20sp"
            android:layout_below="@+id/location_id"
            android:layout_toRightOf="@id/location_name_label"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_region_label"
            android:textColor="#AAAAAA"
            android:text="Region:"
            android:textSize="17sp"
            android:layout_below="@+id/location_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_region"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="20sp"
            android:layout_below="@+id/location_name"
            android:layout_toRightOf="@+id/location_region_label"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_city_label"
            android:textColor="#AAAAAA"
            android:text="City:"
            android:textSize="17sp"
            android:layout_below="@+id/location_region"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_city"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="20sp"
            android:layout_below="@id/location_region"
            android:layout_toRightOf="@id/location_city_label"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_zip_label"
            android:textColor="#AAAAAA"
            android:text="ZIP:"
            android:textSize="17sp"
            android:layout_below="@+id/location_city"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_zip"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="20sp"
            android:layout_below="@id/location_city"
            android:layout_toRightOf="@id/location_zip_label"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_street_label"
            android:textColor="#AAAAAA"
            android:text="Street:"
            android:textSize="17sp"
            android:layout_below="@+id/location_zip"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_street"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="20sp"
            android:layout_below="@id/location_zip"
            android:layout_toRightOf="@id/location_street_label"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_street_number_label"
            android:textColor="#AAAAAA"
            android:text="Street Number:"
            android:textSize="17sp"
            android:layout_below="@+id/location_street"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_street_number"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="20sp"
            android:layout_below="@id/location_street"
            android:layout_toRightOf="@id/location_street_number_label"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_details_label"
            android:textColor="#AAAAAA"
            android:text="Details:"
            android:textSize="17sp"
            android:layout_below="@+id/location_street_number"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_details"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="20sp"
            android:layout_below="@id/location_street_number"
            android:layout_toRightOf="@id/location_details_label"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/location_details_label"
            tools:context="cm.com.teamscheduler.app.app.activity_location_details"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navigarion_drawer_header">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>